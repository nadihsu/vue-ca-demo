{
  "name": "payment-manager",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "yarn lint && run-p \"build-only {@}\" --",
    "build-only": "vite build",
    "preview": "vite preview",
    "lint": "yarn lint:es && yarn lint:style && yarn lint:type",
    "lint:es": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lint:style": "stylelint \"src/**/*.{css,scss,vue}\"",
    "lint:type": "vue-tsc --noEmit -p tsconfig.json --composite false",
    "fix": "yarn fix:es; yarn fix:style",
    "fix:es": "yarn lint:es --fix",
    "fix:style": "yarn lint:style --fix",
    "format": "prettier --write src/",
    "test": "vitest",
    "test:cov": "yarn test --coverage",
    "test:ci": "yarn lint && yarn test --coverage.enabled --coverage.reporter=text --coverage.reportsDirctory="
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "@vueuse/core": "^10.10.0",
    "element-plus": "^2.7.2",
    "minireset.css": "^0.0.7",
    "normalize.css": "^8.0.1",
    "pinia": "^2.1.7",
    "ramda": "^0.30.0",
    "vue": "^3.4.20",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.3.2",
    "vuedraggable": "^2.24.3"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^4.0.0",
    "@pinia/testing": "^0.1.3",
    "@rushstack/eslint-patch": "^1.10.3",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/vue": "^8.1.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/validator": "^13.11.10",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vue/eslint-config-airbnb": "^8.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-testing-library": "^6.2.2",
    "eslint-plugin-vue": "^9.26.0",
    "jest-serializer-vue-tjw": "^3.20.0",
    "jsdom": "^24.1.0",
    "lodash": "^4.17.21",
    "msw": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-html": "^1.7.0",
    "postcss-scss": "^4.0.8",
    "prettier": "^3.2.5",
    "sass": "^1.77.2",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^4.6.0",
    "stylelint-config-recommended-scss": "^13.1.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-prettier": "^4.1.0",
    "stylelint-scss": "^5.3.2",
    "typescript": "^5.4.5",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-vue-components": "^0.27.0",
    "unplugin-vue-router": "^0.8.8",
    "vite": "^5.2.12",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-stylelint": "^5.3.1",
    "vitest": "^1.6.0",
    "vue-eslint-parser": "^9.4.2",
    "vue-tsc": "^2.0.19"
  },
  "resolutions": {
    "string-width": "4.2.0",
    "wrap-ansi": "7.0.0",
    "strip-ansi": "6.0.1"
  },
  "jestSerializer": {
    "sortAttributes": true,
    "verbose": true,
    "attributesToClear": [
      "aria-labelledby",
      "aria-describedby",
      "aria-controls",
      "id",
      "for",
      "name"
    ]
  },
  "volta": {
    "node": "18.18.0"
  }
}
