{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "element-plus/global",
      "vitest/globals",
      "@testing-library/vue",
      "@testing-library/jest-dom",
    ],
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/assets/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "files": ["auto-imports.d.ts", "components.d.ts", "typed-router.d.ts"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
